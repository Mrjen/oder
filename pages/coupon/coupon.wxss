/* pages/coupon/coupon.wxss */
page{
  background: #f9b18d;
}

.container{
  position: absolute;
  width: 100%;
  height: 100%;
  /*padding-top: 100rpx;*/
}

.card_box{
   width: 678rpx;
   height: 732rpx;
   background: #fff;
   border-radius: 10rpx;
   margin:0 auto;
   margin-top: 100rpx;
}

.logo{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin:0 auto;
  margin-top:-65rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.shop_name{
  text-align: center;
  color: #666;
  margin:20rpx 0;
}

.title{
  font-size: 50rpx;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 80rpx;
}

.use_item{
  padding:0 20rpx;
  display: flex;
  line-height: 50rpx;
  margin-bottom: 10rpx;
}

.item_tip{
  flex-shrink: 0;
  line-height: 50rpx;
  font-size: 32rpx;
}

.item_content{
  line-height: 50rpx;
  font-size: 32rpx;
}

.address{
  width: 638rpx;
  margin: 0 auto;
  display: flex;
  padding:20rpx 0;
  line-height: 50rpx;
  position: relative;
  border-top: 1px dashed #999;
}

.call{
  padding-top: 20rpx;
}

.get_cards{
  width:450rpx;
  height: 96rpx;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 96rpx;
  font-size: 32rpx;
  background: #ffd63c;
  margin:80rpx auto;
}
