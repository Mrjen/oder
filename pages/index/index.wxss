/**index.wxss**/
page{
  background:#f3f3f3;
}

.swiper{
	width:100%;
	height:350rpx;
}

.swiper  swiper-item,.swiper  swiper-item image{
	width:100%;
	height:100%;
	display:block;
}

.shop_view{
	display:flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 30rpx;
  height: 138rpx;
  background: #fff;
  position: relative;
}

.text_right text{
    display:block;
    position: relative;
    color: #999;
}

.text_right text:before {
  content: '';
  position: absolute;
  right: 1px;
  top: -5px;
  width: 10px;
  height: 10px;
  border-top: solid 1px currentColor;
  border-right: solid 1px currentColor;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}

.shop_name{
  font-size: 30rpx;
  margin-bottom: 24rpx;
  color: #1d1d1d;
}

.shop_address{
  font-size: 26rpx;
  color: #6c6c6c;
  display: flex;
  align-items: center;
}

.shop_address .address_icon{
  display: inline-flex;
  width: 30rpx;
  height: 40rpx;
  background: #666;
  align-items: center;
  margin-right: 10rpx;
}

.cards_view{
  display: flex;
  justify-content: space-around;
  padding:30rpx 20rpx;
  background: #fff;
  position: relative;
  margin:22rpx auto;
}

.item_card{
  width: 216rpx;
  height: 100rpx;
  background: #999;
}

.item_card image{
  display: block;
  width: 100%;
  height: 100%;
}

/*导航  */
.recommend_nav{
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  position: relative;
}

.recommend_nav{
  padding:0 20rpx;
}

.nav_item{
  line-height: 80rpx;
  width: 210rpx;
  text-align: center;
  position: relative;
  color: #191919;
}

.nav_border::before{
   content: "";
   position: absolute;
   left: 0;
   bottom: 0;
   width: 100%;
   border-bottom: 1px solid #323232;
   transform: translateY(.5);
   transform-origin: 0 0;
}

.dish_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  margin-bottom: 20rpx;
}

.dish_list{
  background: #fff;
}

.dish_item image{
  display: block;
  width: 700rpx;
  margin:0 auto;
}

.img_title{
  width: 700rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 76rpx;
  background: rgba(0, 0, 0, 0.5);
  margin:0 auto;
  margin-top: -76rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  line-height: 76rpx;
}
