/* pages/myCoupon/myCoupon.wxss */
page{
  background: #eee;
}

.top_nav{
  width: 100%;
  display: flex;
  height: 90rpx;
  background: #fff;
  position: relative;
  margin-bottom: 20rpx;
}

.top_nav .nav_item{
  flex:1;
  line-height: 90rpx;
  text-align: center;
  color: #060606;
}

.top_nav .nav_item.nav_active{
  border-bottom: 1px solid red;
}

/*优惠券*/
.cards_item{
  width: 700rpx;
  height: 680rpx;
  height: 226rpx;
  margin:0 auto;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.card_content{
   width: 100%;
   height: 100%;
   border-top: 10rpx solid #ff6600;
   display: flex;
   align-items: center;
}

.card_left{
  width: 180rpx;
  height: 200rpx;
  line-height: 200rpx;
  display: flex;
  align-items: baseline;
  justify-content: center;
  font-size: 50rpx;
  color: #ff6600;
  border-right: 1px dashed #999;
  margin-right: 30rpx;
}

.card_left text{
  font-size: 20rpx;
}

.card_right view{
   line-height: 50rpx;
}
