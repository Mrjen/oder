/* pages/Order/Order.wxss */
page{
  background: #f3f3f3;
}

.top_nav{
  width: 100%;
  height: 116rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top_nav navigator{
  display: block;
  width: 232rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  box-sizing: border-box;
}

.top_nav navigator:nth-of-type(1){
  background: #444;
  color: #fff;
}

.top_nav navigator:nth-of-type(2){
  background: #fff;
  border: 1px solid #444;
  color: #444;
}

/*菜类导航*/
.nav_box{
  width: 100%;
  height: 80rpx;
  display: block;
  background: #fff;
}

.scroll_box{
	height: 100%;
	position: relative;
}

.nav_box .nav_item{
  width: 170rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #707070;
  float: left;
}

.nav_box .nav_item.nav_active{
  color: #252525;
  border-bottom: 1px solid #1d1d1d;
}

/*菜品列表*/
.dish_img{
  width: 140rpx;
  height: 110rpx;
  margin-right: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dish_img image{
  display: block;
  width: 100%;
}

.dish_item{
  display: flex;
  background: #fff;
  position: relative;
  /* height: 164rpx; */
  align-items: center;
  padding:30rpx 20rpx;
}

.dish_right{
  flex:1;
	height: 110rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.dish_title{
  font-size: 30rpx;
  color: #3a3a3a;
}

.info_box{
  display: flex;
  justify-content: space-between;
}

.info_left{
  font-size: 26rpx;
	height: 26rpx;
  display: flex;
}

.dish_price{
  color: #ff3300;
  margin-right: 20rpx;
	font-size: 26rpx;
	line-height: 50rpx;
}

.dish_sales{
  color: #8b8b8b;
	font-size: 26rpx;
	line-height: 50rpx;
}

.buy_icon{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.buy_icon image{
  display: block;
  width: 100%;
  height: 100%;
}


/*加入购物车*/
.car_box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 340rpx;
  background: #fff;
}

.shop_car_box{
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}

.shop_left{
  display: flex;
}

.shop_box{
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.shop_info{
  flex: 1;
  display: flex;
  height: 120rpx;
  justify-content: space-between;
  flex-direction: column;
}

.shop_info view:nth-of-type(1){
  font-size: 30rpx;
}

.shop_info view:nth-of-type(2){
  font-size: 30rpx;
  color: #ff3300;
}

.shop_left image{
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}


.close_car text {
  color: #666;
  display: block;
  position: relative;
  margin-top: 0;
  margin-left: 0;
  width: 21px;
  height: 21px;
}

.close_car text:before {
  content: '';
  position: absolute;
  top: 10px;
  width: 21px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
}

.close_car text:after {
  content: '';
  position: absolute;
  top: 10px;
  width: 21px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}


.info_right{
  display: flex;
  align-items: center;
}

.info_right input{
  display: block;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  box-sizing: border-box;
}

.info_right view:nth-of-type(1){
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border:1px solid #333;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info_right view:nth-of-type(2){
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  /*border:1px solid #333;*/
  text-align: center;
  background: #F7CE45;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.count_box{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.add_to_shopcart{
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 80rpx;
  background: #F7CE45;
  color: #fff;
  margin-top: 20rpx;
}

/*小功能*/
.page_opation{
  width: 84rpx;
  height: 260rpx;
  position: fixed;
  right: 0;
  bottom: 0;
}

.page_opation navigator{
  width: 82rpx;
  height: 82rpx;
  margin:4rpx 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.page_opation navigator image,.page_opation button image{
  display: block;
  width: 90%;
  height: 90%;
}

.page_opation button{
  width: 82rpx;
  height: 82rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 0;
  padding:0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin:4rpx 0;
}

.page_opation button::after{
  display: none;
}
