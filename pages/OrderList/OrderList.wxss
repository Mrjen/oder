/* pages/OrderList/OrderList.wxss */
page{
  background: #eee;
}

.top_nav{
  width: 100%;
  display: flex;
  height: 90rpx;
  background: #fff;
  position: relative;
  margin-bottom: 20rpx;
}

.top_nav .nav_item{
  flex:1;
  line-height: 90rpx;
  text-align: center;
  color: #060606;
}

.top_nav .nav_item.nav_active{
  border-bottom: 1px solid red;
}

/*订单列表*/
.img_box{
  width: 106rpx;
  height: 106rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.list_item{
  background: #fff;
}

.img_box image{
  width: 106rpx;
  height: 106rpx;
}

.img_box{
  margin-right: 20rpx;
}

.item_nav{
  display: flex;
  justify-content: space-between;
  height: 84rpx;
  line-height: 84rpx;
  padding:0 24rpx;
  font-size: 28rpx;
  position: relative;
}

.item_nav view{
  line-height: 80rpx;
}

.dish_list{
  display: flex;
  padding:20rpx 0;
  width: 702rpx;
  margin:0 auto;
  position: relative;
  margin-bottom: 20rpx;
}

.list_right{
  flex: 1;
  display: flex;
  justify-content: space-between;
  padding-right:20rpx;
}

.list_right .title{
  padding-top: 6rpx;
  flex:1;
  margin-right: 20rpx;
}

.detail view{
  text-align: right;
}

.detail view:nth-of-type(1){
  margin-bottom: 10rpx;
}
