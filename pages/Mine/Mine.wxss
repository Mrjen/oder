.info_box{
  width: 100%;
  height: 230rpx;
  display: flex;
  padding:0 60rpx;
  background: #f3f3f3;
  align-items: center;
}

.info_box image{
  width: 116rpx;
  height: 116rpx;
  background: #666;
  border-radius: 50%;
  display: block;
  margin-right: 30rpx;
}

.info_box text{
  display: block;
  font-size: 30rpx;
  color: #fff;
}

.list_left{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #434343;
}

.list_left image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.list_item{
  width: 100%;
  height: 92rpx;
	box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
  position: relative;
}

.right_icon{
   position: relative;
   color: #a7a7a7;
}

.right_icon:before {
  content: '';
  position: absolute;
  right: 1px;
  top: -5px;
  width: 10px;
  height: 10px;
  border-top: solid 1px currentColor;
  border-right: solid 1px currentColor;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
